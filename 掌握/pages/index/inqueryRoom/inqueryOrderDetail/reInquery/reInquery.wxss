/* pages/index/makeInquriy/makeInquriy.wxss */
page{
    background: #F5F5F5;
    box-sizing: border-box;
    padding-top:1px;
    height:100%;
}
.makeInquriy{
    height:100%;
    overflow:auto;
}
.type{
        box-sizing: border-box;
        font-size:14px;
        width:100%;
        height:76rpx;
        background:#fff;
        border-radius:2px;
        display: flex;
        align-items: center;
        padding-left:28rpx;
    }
    .inp{
        flex:1;
    }
    .dec{
        margin-right:30rpx;
        font-size:14px;
        font-weight: 600;
    }
    /* 添加查询配件 */
    .addPj{
        width:100%;
        height:180rpx;
        background:rgba(255,255,255,1);
        border-radius:1px;
        margin:20rpx 0;
    }
    .qualityRange{
        height:84rpx;
        width:100%;
        box-sizing: border-box;
        font-size:12px;
        background:#fff;
        font-weight: 600;
        line-height: 84rpx;
        margin-bottom:1px;
        padding-left:28rpx;        
        
    }
    .color{
        color:#F05B29;
    }
    /* 品质范围选项 */
    .checkboxView{
        background:#fff;
        height:100rpx;
        line-height: 100rpx;
        font-size:14px;
        color:#333;
        padding-left:28rpx;
        box-sizing: border-box;
        
        /* overflow:hidden;
         */
    }
    .checkboxView .group{
       height:100rpx;
       white-space:nowrap;
    }
    .checkbox{
        height:100rpx;
        margin-right:68rpx;
    }
    /* checkbox 默认样式重置 */
    checkbox .wx-checkbox-input {
        /* border-radius: 50%; */
        width: 30rpx;
        height: 30rpx;
        margin-top: -4rpx;
    }
    checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
        width: 30rpx;
        height: 30rpx;
        line-height: 30rpx;
        text-align: center;
        font-size: 14rpx;
        color: #fff;
        background: transparent;
        transform: translate(-50%, -50%) scale(1);
        -webkit-transform: translate(-50%, -50%) scale(1);
        }

        /* 配件列表  */
        .top{
            height:80rpx;
            background:#fff;
            display: flex;
            justify-content: space-between;
            align-items: center;
            font-size:14px;
            font-weight: 600;
            padding-left:28rpx;
            margin-bottom:2rpx;
        }
        .number{
            width:34rpx;
            height:34rpx;
            text-align: center;
            line-height: 34rpx;
            border-radius: 50%;
            color:#F05B29;
            border:1px solid #F05B29;
            margin-right:16rpx;
        }
        /* 配件数量 */
        .accessoriesInp{
            width:80rpx;
            height:80rpx;
            line-height: 80rpx;
            text-align: center;
            border-left:1px solid #F5F5F5;            
            background:rgba(255,255,255,1);
            box-shadow:0px 1px 0px 0px rgba(245,245,245,1);
        }
        /* 配件名称 */
        .name{
            font-size:14px;
        }
        /* 删除按钮 */
        .del{
            color:#999999;
            font-size:20px;
        }
        .remarks{
            height:140rpx;
            width:100%;
            font-size:14px;
            color:#333333;
            background:#fff;
            padding: 20rpx 28rpx;
            box-sizing: border-box;
            overflow:auto;
        }
    
