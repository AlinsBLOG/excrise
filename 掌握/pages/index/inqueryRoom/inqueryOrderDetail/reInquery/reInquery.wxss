/* 添加照片 */

.photo_box {
    padding: 30rpx;
    background:#fff;
}

.camera {
    width: 150rpx;
    height: 150rpx;
    border: 1px dashed #ddd;
    background-color: #f5f5f5;
    margin: 0 20rpx 20rpx 0;
    float: left;
    background:#fff;
}

/*清除浮动代码*/

.clearfloat:after {
    display: block;
    clear: both;
    content: "";
    visibility: hidden;
    height: 0
}

.clearfloat {
    zoom: 1
}

.camera text {
    color: #666;
    width: 100%;
    top: 70%;
    left: 50%;
    transform: translate(-50%, -50%);
}

.camera_img {
    width: 56rpx;
    height: 50rpx;
    top: 40%;
    left: 50%;
    transform: translate(-50%, -50%);
}

.photo_img {
    width: 100%;
}

.del {
    width: 32rpx;
    height: 32rpx;
    top: 0;
    left: 0;
    transform: translate(-40%, -40%);
    background: #333333;
    border-radius: 50%;
}

.del_img {
    width: 16rpx;
    height: 16rpx;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
}
