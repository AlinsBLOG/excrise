/* pages/index/me/addrManage/newAddr/newAddr.wxss */
page{
  background: #f5f5f5;
}
.formBox{
  font-size:28rpx;
  color:#333333;
  letter-spacing:-0.11px;
  padding-left:24rpx;
  background: #fff;
}
.formBox input{
  height:92rpx;
  line-height: 92rpx;
  border-bottom: 2rpx solid #e6e6e6;
}
/* 保存 */
.savaBox{
  background: #f5f5f5;
  width: 100%;
}
.sava{
  background:#f05b29;
  border-radius:2px;
  width:694rpx;
  height:70rpx;
  margin-top:60rpx;
  line-height: 70rpx;
  font-size:15px;
  color:#ffffff;
  letter-spacing:0.14px; 
} 
/*设置默认地址icon  */
.comfirmIcon{
  width: 28rpx;
  height:28rpx;
  margin-right:10rpx;
  background: #ccc;
  border-radius: 50%;
}
.defaultAddr{
  height:96rpx;
  font-size:22rpx;
  color:#666666;
}
/*获取当前位置  */
.location{
  height: 100%;
  right:24rpx;
  top:50%;
  transform: translateY(-50%);
  font-size:26rpx;
  color:#f05b29;
  letter-spacing:-0.1px;
  z-index: 100;
}
.mapIcon{
  width:20rpx;
  height:26rpx;
  margin-right:6rpx;
}
checkbox{
   border-radius: 50%;
   width:20rpx;
   height: 20rpx;
   margin-right:20rpx;
}
checkbox:checked::before{
   width: 20rpx;
   height: 20rpx;
    line-height:20rpx; 
   font-size:20rpx;
}
.df_active{
  color:#f05b29;
}

