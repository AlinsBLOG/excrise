/* pages/index/qiugou/qiugou.wxss */

page {
  background: #eee;
  padding-bottom: 120rpx;
}

.banner {
  width: 100%;
  height: 376rpx;
}

.infoItem {
  background: #fff;
  width: 100%;
  height: 100%;
  padding: 20rpx 18rpx 14rpx 18rpx;
  box-sizing: border-box;
  word-break: break-all;
}

.sj_icon {
  right: 0;
  top: 0;
  height: 0rpx;
  width: 0;
  color:#fff;
}
.qg_xunjia{
   border-top: 35rpx solid #f5a623;
  border-bottom: 35rpx solid transparent;
  border-left: 40rpx solid transparent;
  border-right: 40rpx solid #f5a623;
}
.qg_finish{
  color:#fff;
  border-top: 35rpx solid #06b73b;
  border-bottom: 35rpx solid transparent;
  border-left: 40rpx solid transparent;
  border-right: 40rpx solid #06b73b;
}

.cont {
  color: #fff;
  font-size: 18rpx;
  transform: rotate(45deg);
  transform-origin: left top;
  top: 0rpx;
  right: -15rpx;
}

.status {
  font-size: 24rpx;
  color: #06b73b;
  padding: 6rpx 10rpx;
  right: 18rpx;
  top: 25%;
  border: 2rpx solid #06b73b;
  border-radius: 18rpx;
  margin-bottom: 12rpx;
}

.infoName {
  margin-bottom: 20rpx;
  font-size: 14px;
  color: #333;
  width: 80%;
}

.infoAddr {
  font-size: 12px;
  color: #999;
  justify-content: space-around;
  height: 34rpx;
}

.pfbtn {
  background: #fff;
  box-shadow: 0 -1px 0 0 rgba(230, 230, 230, 0.50);
  border-radius: 1px;
  width: 100%;
  height: 120rpx;
  bottom: 0;
  left: 0;
}

.nowBuy {
  background: #f05b29;
  border-radius: 2px;
  font-size: 14px;
  color: #fff;
  width: 347px;
  height: 70rpx;
  text-align: center;
  line-height: 70rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
