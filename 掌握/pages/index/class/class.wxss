/* pages/index/class/class.wxss */
page{height: 100%;}
.top{
	width: 100%;
	height: 88rpx;
	line-height: 88rpx;
	border-bottom: 1px solid #eee;
}
.topbtn{
	width: 88rpx;
	height: 88rpx;
	padding: 19rpx;
	position: absolute;
	top: 0;
}
.l0{left: 0;}
.r0{right: 0;}
.top_text{
	width: 105px;
	padding: 0 5px;
	height: 88rpx;
	line-height: 88rpx;
	margin: 0 auto;
}
.class_text{
	width: 40px;
	height: 88rpx;
	text-align: center;
}
.top_bottomline{
	position: absolute;
	bottom: 0;
	left: 0;
	width: 50px;
	height: 2px;
	background-color: #fd5f2a;
	transition: all 0.3s linear;
}
.line_right{
	left: calc(100% - 50px);
}



swiper{
	width: 100%;
	height: calc(100% - 88rpx);
}
.container{
	width: 750rpx;
	height: 100%;
	/*border: 1px solid #000;*/
}
/*model*/
.model_scroll{
	width: 100%;
	height: 100%;
	padding-right: 36rpx;
	box-sizing: border-box;
}
.model_title{
	background-color: #f3f3f3;
	height: 45rpx;
	line-height: 45rpx;
	padding-left: 30rpx;
	font-size: 12px;
}
.hot_item{
	width: 20%;
	height: 200rpx;
	box-sizing: border-box;
	border-bottom: 1px solid #f3f3f3;
}
.hot_border1{
	border-left: 1px solid #f3f3f3;
}
.hot_img{
	width: 90rpx;
	height: 90rpx;
	margin: 45rpx auto 20rpx;
}

.model_item{
	width: 100%;
	height: 80rpx;
	line-height: 80rpx;
	padding-left: 30rpx;
	border-bottom: 1px solid #f3f3f3;
}
.model_img{
	width: 60rpx;
	height: 60rpx;
	margin: 10rpx 0 10rpx 30rpx;
}
.model_text{
	margin-left: 30rpx;
	width: calc(100% - 120rpx);
}


/* 二级页面 */
.second_title{
	width: 100%;
	height: 120rpx;
	line-height: 120rpx;
}
.model_second{
	width: 750rpx;
	height: 100%;
	top: 0;
	right: 0;
	box-shadow: -10px 0 20px #ccc;
	/* display: none; */
}
.second_img{
	width: 90rpx;
	height: 90rpx;
	top: 50%;
	transform: translateY(-50%);
	left: 0;
}
.second_text{
	top: 50%;
	left: 30%;
	transform: translate(-50%,-50%);
}
.mask{
	background-color: 	transparent;
	/* background-color: black; */
	width: 750rpx;
	height: 100%;
	top: 0;
	left: 0;
	
}
/* 子列表 */
.ulLis{
    width:100%;
	height:92rpx;
    line-height: 92rpx;
    padding-left: 30rpx;
    z-index: 99;
    border-bottom: 1px solid #eee;
}
.secondClass{
    width:70%;
    height: 100%;
    top: 0;
	right: 0;
	background-color: #fff;
	box-shadow: -10px 0 20px #ccc;
}


/*class*/
.class_left{
	width: 170rpx;
	height: 100%;
	border-right: 1px solid #eee;
}
.class_item{
	width: 100%;
	padding: 22rpx 0;
}
.class_name{
	width: 100%;
	height: 30rpx;
	line-height: 30rpx;
	border-left: 5rpx solid transparent;
}
.class_act{
	border-left: 5rpx solid #fd5f2a;
}

.class_right{
	width: 580rpx;
	height: 100%;
}
.class_banner{
	width: 100%;
	height: 175rpx;
}
.p20{padding: 20rpx;}
.class_typename{
	width: 100%;
	height: 50rpx;
	line-height: 50rpx;
}
.class_typeitem{
	width: 180rpx;
	height: 240rpx;
}
.class_typeimage{
	width: 120rpx;
	height: 120rpx;
	margin: 20rpx auto;
}
.class_leftLine{
	background:#d8d8d8;
	width:19px;
	height:1px;
	top: 50%;
	left: 30%;
}
.class_rightLine{
	background:#d8d8d8;
	width:19px;
	height:1px;
	top: 50%;
	right: 30%;
}



.searchWord{
    width: 100%;
    padding:20rpx  0 20rpx 28rpx;
    margin-top: 20rpx;
	box-sizing: border-box;
}
.searchWord>text{
    margin-bottom: 28rpx;
}
.keyword{
	width: 133rpx;
    padding: 6rpx 12rpx;
    border: 1px solid #eee;
    border-radius:2px;
    height:30rpx;
    line-height: 30rpx;
    text-align: center;
    margin:  0 10rpx 10rpx 10rpx;
}
/* 侧边栏 */
.sidebar{
	width: 36rpx;
	height: 100%;
	top: 0rpx;
	right: 0rpx;
}
.sidebar_nav{
	width: 36rpx;
	top: 50%;
	right: 0rpx;
	transform: translateY(-50%);
}