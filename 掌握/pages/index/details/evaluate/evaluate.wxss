/* pages/index/class/class.wxss */

page {
    height: 100%;
    background: #eeeeee;
}

.top {
    width: 100%;
    height: 88rpx;
    line-height: 88rpx;
    border-bottom: 1px solid #eee;
}

.topbtn {
    width: 88rpx;
    height: 88rpx;
    padding: 19rpx;
    position: absolute;
    top: 0;
}

.l0 {
    left: 0;
}

.r0 {
    right: 0;
}

.top_text {
    width: 230px;
    padding: 0 5px;
    height: 88rpx;
    margin: 0 auto;
}

.class_text {
    width: 100px;
    height: 88rpx;
    text-align: center;
}

.class_text {
    height: 40rpx;
    line-height: 40rpx;
}

.top_bottomline {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 110px;
    height: 2px;
    background-color: #fd5f2a;
    transition: all 0.3s linear;
}

.line_right {
    left: calc(100% - 110px);
}

swiper {
    width: 100%;
    height: calc(100% - 88rpx);
}

.container {
    width: 750rpx;
    height: 100%;
    /*border: 1px solid #000;*/
}

/* 评价为空 */

.null_image {
    width: 160rpx;
    height: 144rpx;
    top: 116rpx;
    left: 50%;
    transform: translateX(-50%);
}

.null_title {
    color: #797979;
    top: 300rpx;
    left: 50%;
    transform: translateX(-50%);
}

/* 商品评论 */

.choose_label {
    width: 100%;
    padding: 20rpx 0 20rpx 28rpx;
    box-sizing: border-box;
    border-bottom: 1px solid #eee;
}

.keyword {
    padding: 0rpx 10rpx;
    border-radius: 3px;
    max-width: 214rpx;
    height: 48rpx;
    line-height: 48rpx;
    text-align: center;
    margin: 0 20rpx 10rpx 0;
    background: #f5f5f5;
}

.goods_stars {
    width: 100%;
    height: 70rpx;
    line-height: 70rpx;
}

.eva_name {
    padding: 0 30rpx;
}

.eva_text {
    padding: 10rpx 30rpx;
    font-weight: 700;
}

.stars_box {
    height: 70rpx;
}

.stars_img {
    width: 18rpx;
    height:20rpx;
    top: 50%;
    transform: translateY(-50%);
    padding: 0 4rpx;
}

.choosed_label {
    width: 100%;
    padding-left: 40rpx;
    box-sizing: border-box;
}

.choosed_label .keyword {
    padding: 0rpx 10rpx;
    border-radius: 3px;
    max-width: 214rpx;
    height: 48rpx;
    line-height: 48rpx;
    text-align: center;
    margin: 0 20rpx 0 0;
    background: #f5f5f5;
}

.photo_box {
    padding: 30rpx;
}

.camera {
    width: 150rpx;
    height: 150rpx;
    background-color: #f5f5f5;
    margin: 0 20rpx 20rpx 0;
    float: left;
}

/*清除浮动代码*/

.clearfloat:after {
    display: block;
    clear: both;
    content: "";
    visibility: hidden;
    height: 0
}

.clearfloat {
    zoom: 1
}

.photo_img {
    width: 100%;
}

.eva_list {
    width: 100%;
    padding-bottom: 60rpx;
    border-bottom: 1px solid #eee;
}

.eva_date {
    height: 22rpx;
    bottom: 30rpx;
    left: 30rpx;
}

.zan {
    height: 22rpx;
    bottom: 30rpx;
    right: 30rpx;
}

.zan_img {
    width: 22rpx;
    height: 22rpx;
}

/* 绑定手机弹窗 */

.tieForm {
    width: 750rpx;
    height: 100%;
    z-index: 2;
}

.inputCase {
    width: 100%;
    height: 88rpx;
    line-height: 88rpx;
    border: 1px solid #ddd;
    margin: 20rpx 0;
    border-radius: 2px;
}

.inputCase input {
    width: 60%;
    height: 88rpx;
    line-height: 88rpx;
}

.code {
    width: 70%;
}

.code button {
    width: 24%;
    height: 88rpx;
    line-height: 88rpx;
    right: 36rpx;
    background-color: #44b510;
    border-radius: 4rpx;
    padding: 0;
}

.tieForm form {
    width: 590rpx;
    height: 494rpx;
    top: 45%;
    left: 50%;
    transform: translate(-50%, -50%);
    padding: 40rpx;
    box-sizing: border-box;
}

.back {
    width: 40rpx;
    height: 40rpx;
    top: 20rpx;
    right: 20rpx;
}

.subbtn::after {
    border: none;
}

.submit {
    width: 510rpx;
    height: 88rpx;
    line-height: 88rpx;
    bottom: 40rpx;
    right: 40rpx;
    border-radius: 2px;
}

button[type=primary] {
    background: #44b510;
}

.mask {
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.70);
    top: 0;
    left: 0;
}

/* 清浮动 */

.clearfix:after {
    content: "";
    height: 0;
    line-height: 0;
    display: block;
    visibility: hidden;
    clear: both
}

.clearfix {
    zoom: 1;
}