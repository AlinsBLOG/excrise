<view>
  <view class='box'>
    <view class='bindMobile'>绑定手机号</view>
    <view class='serve'>为了更好的提供服务，你需要绑定一个手机号</view>
    <view class='createRows'>
      <view class='row'>
        <!-- <text>手机号码</text> -->
        <input 
          name='mobile'
          data-name='mobile'
          bindinput='inputChange'
          type='number'
          focus
          value='{{mobile}}'
          placeholder='手机号码' 
          placeholder-class="phcolor"></input>
       <image
          wx:if='{{mobile.length}}'
          catchtap="emptyStr" 
          class="empty" 
          src="/images/icons/search/empty.png"></image>
      </view>
    </view>
    <!-- <view class='createRows'>
      <view class='row'>
        <text>手机号码</text>
        <input 
          name='password'
          data-name='password'
          bindinput='inputChange'
          placeholder='密   码' 
          placeholder-class="phcolor"></input>
      </view>
    </view> -->
    <view class='createRows'>
      <view class='row validCode'>
        <!-- <text>验证码</text> -->
        <input 
          name='code'
          data-name='code'
          type='number'
          bindinput='inputChange'
          placeholder='请输入短信验证码' 
          placeholder-class="phcolor"></input>
        <block>
          <block wx:if='{{!selected}}'>
            <button 
              class='disColor'
              wx:if='{{!mobileTrue}}'>获取验证码</button>
            <button 
              wx:else
              bindtap='tapGetCode'>获取验证码</button>
          </block>
          <button 
            wx:if='{{selected}}' 
            class='disColor'>{{second}}秒后重发</button>
        </block>
      </view>
    </view>
  </view>
  <view class='createCertain'>
    <button bindtap='loginCertain' wx:if='{{code.length == 4 && mobileTrue}}'>立即绑定</button>
    <button wx:else class='disBg'>立即绑定</button>
    <!-- <text bindtap='loginTypeAction'>账号密码登录</text> -->
  </view>
</view>