<template>
  <div class="Home">
    <Head-Top head-title='顾问'></Head-Top>
    <div class="search-div">
      <span @click='search'>
        <i class="iconfont icon-search"></i> 搜索顾问
      </span>
    </div>
    <div class="adviser-box">
      <mt-swipe>
        <mt-swipe-item v-for='(item, index) in bannerList' :key='index'>
          <img :src="item.image">
        </mt-swipe-item>
      </mt-swipe>
    </div>
    <Search-List></Search-List>
    <Home-Footer></Home-Footer>
  </div>
</template>

<script>
  import { mapState,mapMutations,mapGetters  } from 'vuex'
  import HeadTop from '@/components/header/head'
  import HomeFooter from '@/pages/footer'
  import SearchList from '@/components/searchList'
  import { getBanner } from '@/service/getData'

  export default {
    name:"Adviser",
    data(){
      return{
        bannerList: []
      }
    },
    components:{
      HomeFooter,
      HeadTop,
      SearchList
    },
    mounted:function(){
      this.getInfo()
    },
    methods:{
      search () {
        this.$router.push({
          path: 'adviser/search'
        })
      },
      async getInfo () {
        const that = this
        await getBanner('banner').then(res => {
          that.bannerList = res.data.banner
        })
      }
    }
  }
</script>

<style lang="scss" scoped>
  @import '../../styles/mixin.scss';
  .search-div {
    background-color: $cglobal;
    padding: .2rem .5rem .3rem;
    span {
      background-color: #fff;
      display: block;
      border-radius: 2px;
      color: #969696;
      font-size: .4rem;
      line-height: 1.2;
      vertical-align: middle;
      .iconfont.icon-search {
        font-size: .7rem;
        vertical-align: sub;
      }
    }
  }
  .adviser-box {
    height: 4rem;
    img {
      width: 100%;
      height: 100%;
    }
  }

  .module-adviser-list.ceiling {
    margin-top: .2rem !important;
  }
</style>

