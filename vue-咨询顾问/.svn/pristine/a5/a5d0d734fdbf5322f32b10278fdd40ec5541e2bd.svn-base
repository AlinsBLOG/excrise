*{
	box-sizing:border-box;
	list-style:none;
  margin:0;
  padding:0
}

body,
html {
  color: #333;
  background-color: #f5f5f5;
}

body {
  padding-top: 1.2rem;
}

img {
  border: 0;
  vertical-align: middle
}

a {
  text-decoration: none;
  color: #232323
}

table {
  border-collapse: collapse;
  table-layout: fixed
}

input,
textarea {
  outline: 0;
  border: 0
}

textarea {
  resize: none;
  overflow: auto
}

.clearfix {
  zoom: 1
}

.clearfix:after {
  content: ".";
  width: 0;
  height: 0;
  visibility: hidden;
  display: block;
  clear: both;
  overflow: hidden
}

.fl {
  float: left
}

.fr {
  float: right
}

.tl {
  text-align: left
}

.tc {
  text-align: center
}

.tr {
  text-align: right
}

.ellipse {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap
}

.inline{
  display:inline-block
}