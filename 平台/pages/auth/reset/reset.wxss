page{
  display: block;
  width: 100%;
  height: 100%;
}

.container{
  height: 100%;
  padding: 80rpx 40rpx;
}

.form-item{
  position: relative;
}

.mobile{
  background: #fff;
  display: block;
  line-height: 80rpx;
  height: 80rpx;
  border-radius: 3px;
  padding: 0 15px;
}


.form-item-code{
    margin-top:32rpx;
    height: 80rpx;
    width: 100%;
}

.code-item{
  float: left;
  width: 430rpx;
  height: 80rpx;
  border-radius: 3px;
}

.passwordItem{
  background: #fff;
  line-height: 80rpx;
  height: 80rpx;
  border-radius: 3px;
  padding: 0 15px;
}

.code-item input{
  display: block;
  height: 80rpx;
  padding: 0 15px;
  background: #fff;
  position: relative;
  border-radius: 3px;
}

.form-item .clear{
    position: absolute;
    top: 50%;
    margin-top: -22rpx;
    right: 18rpx;
    z-index: 2;
    display: block;
    background: #fff;
    height: 44rpx;
    width: 44rpx;
}

.getCode{
  float: right;
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #fff;
  border-radius: 3px;
}

.laterCode{
  color: gray;
}


.login-btn{
    margin: 60rpx 0 40rpx 0;
    height: 96rpx;
    line-height: 96rpx;
    color: #fff;
    font-size: 30rpx;
    width: 100%;
    background: #b4282d;
    border-radius: 6rpx;
}
