page{
  background: #F4F4F4;
}

.detailTips{
  background: #fff;
  margin-bottom: 16rpx;
  padding:50rpx 30rpx;
}

.detailTips .head{
  font-size: 32rpx;
  font-weight: 600;
}

.detailTips .info{
  color: gray;
  margin: 20rpx 0;
}

.detailTips .info .time{
  color: #1CBCB4;
}

.message{
  display: flex;
  background: #fff;
  padding: 30rpx;
  border-bottom:1px solid #ececec; 
  margin-bottom: 16rpx;
}

.noMessage{
  justify-content: center;
  font-size: 28rpx;
  font-weight: 600;
}

.message .left{
  flex: 4;
  font-size: 28rpx;
}

.message .right{
  flex: 11;
  padding: 0 20rpx;
  position: relative;
}

.message.choose .right{
  flex: 9;
}

.message.choose .right::before{
  background-image: none;
}

.message .right text{
  display: block;
  font-size: 28rpx;
}

.message .right text:not(:last-child){
  margin-bottom: 15rpx;
}

.serviceInfo{
  background-color: #fff;
  padding: 20rpx 30rpx;
  border-bottom:1px solid #ececec; 
}

.serviceInfo .service,.serviceCenter .service{
  font-size: 24rpx;
  background-color: #FFFCEA;
  color: #CCB58D;
  border: 1px solid #E5DEC1;
  padding: 3rpx 8rpx;
  margin-right: 14rpx;
}

.serviceCenter .service{
  display: inline-block;
  margin-bottom: 5px;
}

.serviceInfo .name,.serviceCenter .name{
  font-size: 29rpx;
  vertical-align: middle;
  margin-right: 14rpx;
}

.serviceInfo .level{
  display: inline-block;
  background-color: #FABC01;
  color: #fff;
  font-size: 24rpx;
  padding: 3rpx 8rpx;
  transform:scale(0.8);
}

.serviceCenter{
  display: flex;
  padding: 30rpx 30rpx;
  background-color: #fff;
}

.serviceBottom{
   margin-bottom: 23rpx;
   border-top: 1px solid #ececec;
   padding:35rpx 30rpx;
   background: #fff;

}

.serviceCenter .left{
  flex:2;
}

.serviceCenter .left .title{
  font-size:34rpx;
  font-weight: 600;
  line-height: 1.5;
  margin-bottom: 15rpx;
  display: block;
}

.serviceCenter .left .area,
.serviceCenter .left .date{
  display: block;
  font-size: 28rpx;
  font-weight: 600;
}

.serviceCenter .left .area{
  margin-bottom: 8rpx;
}

.serviceCenter .right{
  flex: 1;
  text-align: right;
}

.serviceCenter .right{
  font-weight: 600;
  font-size: 30rpx;
}

.right .amount{
  color: #8C8C8C;
  display: inline-block;
  margin-top: 20px;
  font-size: 12px;
}

.serviceBottom .actPay{
  text-align: right;
  font-size: 31rpx;
  font-weight: 600;
}

.orderState{
  text-align: right;
  margin-top: 30rpx;
}

.cancel{
  border: 1px solid #e3e3e3;
  padding: 10rpx 14rpx;
  margin-right: 20rpx;
  border-radius:2px; 
  display: inline-block;
}

.payNow{
  padding: 10rpx 14rpx;
  background: #1CBCB4;
  color: #fff;
  border-radius:2px; 
  display: inline-block;
}

.serviceTitle .state{
  float: right;
  font-size: 30rpx;
  font-weight: 500;
  color: #1CBCB4;
}

.orderDetailPayFix{
  position: fixed;
  bottom: 0;
  z-index: 99;
  background: #fff;
  width: 100%;
  border-top: 1px solid #F4F4F4;
  padding: 10px;
  text-align: right;
}