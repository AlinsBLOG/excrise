.catalog .hd {
  width: 100%;
  position: relative;
  height: 110rpx;
  line-height: 110rpx;
}

.catalog .hd::before{
  content: "";
  display: inline-block;
  width: 4rpx;
  height: 28rpx;
  margin-right: 14rpx;
  background: #de373e;
}

.catalog .hd::after{
  position: absolute;
  content: "";
  width: 100%;
  height: 0;
  left: 0;
  bottom: 0;
  border-bottom: 1px solid #ccc;
  -webkit-transform: scaleY(.5);
  -ms-transform: scaleY(.5);
  transform: scaleY(.5);
  -webkit-transform-origin: center bottom;
  -ms-transform-origin: center bottom;
  transform-origin: center bottom;
}

.catalog .hd .txt {
  font-size: 30rpx;
  color: #323232;
}

.catalog .bd {
  height: auto;
  width: 100%;
  overflow: hidden;
}

.catalog .bd .item {
  padding: 32rpx 42rpx 30rpx 14rpx;
  position: relative;
}

.catalog .bd .item .txt {
  display: block;
  color: #323232;
  font-size: 30rpx;
  margin-bottom: 14rpx;
  font-weight: 500;
}

.catalog .bd .item .content {
  color: #878787;
  font-size: 24rpx;
  line-height: 1.5;
}
