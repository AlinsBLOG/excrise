 <import src="../template/template.wxml"/>
 <wxs src="../template/common.wxs" module="text" />

 <scroll-view class="container" scroll-y="true">
    <view class="logo">
      <image src="../../static/images/logo2_vsupa_03.png" mode="widthFix"></image>
    </view>

    <view
    class="service-company"
    style="background-image:url({{backgroundImgUrl}})">
      <view class="info">
        <view class="verticalMiddle">
          <image src="{{providerDetails.logoUrl}}" mode="aspectFit"></image>
          <text class="name">{{providerDetails.shortName}}</text>
          <!-- <text class="level">{{providerDetails.logoUrl}}</text>  -->
        </view>
        <navigator class="floatRight" url="/pages/companyDetails/companyDetails?id={{id}}">
          <text>店铺详情</text>
        </navigator>
      </view>

      <view class="census">
        <view class="left">
          <view>{{providerDetails.salesCount?providerDetails.salesCount:0}}</view>
          <view>累计销量</view>
        </view>

        <view class="left">
          <view>{{text.formatPcRate(providerDetails.pcCount,providerDetails.commentCount)}}</view>
          <view>好评率</view>
        </view>

          <view class="right">
          <view>完成质量 <text>4.4</text></view>
          <view>服务态度 <text>4.4</text></view>
          <view>工作速度 <text>4.4</text></view>
        </view>
      </view>
    </view>

    <view class="hot">
      <view class="hot-service">
        热销服务
        <navigator
          wx:if='{{serveList.length > 0}}'
          class="more"
          url='/pages/hotGoods/hotGoods?id={{id}}'
        >更多 ></navigator>
      </view>

      <block wx:for='{{serveList}}' wx:key='{{index}}'>
        <template is="templateItem" data="{{...item}}"/>
      </block>

    </view>
    <view class='nothing' wx:if='{{!serveList.length}}'>暂没有查询到相应服务</view>
    <template is='copyRight'></template>
    <navigator
      wx:if='{{serveList.length > 0}}'
      class='allGoods'
      url='/pages/hotGoods/hotGoods?id={{id}}'
    >全部商品</navigator>
</scroll-view>
