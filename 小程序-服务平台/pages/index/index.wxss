.index-menu{
  width: 100%;
  height: 361rpx;
  padding: 45.8rpx 20.8rpx;
  flex-wrap: wrap;
  background-color: #fff;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16.6rpx;
}

.index-menu .item{
  width: 20%;
  display: inline-block;
}

.index-menu .item:nth-child(1){
  margin-bottom: 41.6rpx;
}

.index-menu image{
  display: block;
  margin: 0 auto;
  width: 62.5rpx;
  height: 62.5rpx;
}

.index-menu text{
  display: inline-block;
  width: 100%;
  text-align: center;
  color: #323232;
  font-size: 24rpx;
