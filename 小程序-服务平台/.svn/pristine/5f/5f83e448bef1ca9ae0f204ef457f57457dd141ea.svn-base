var filters = {
  toFix: function (value) {
    return value.toFixed(2)
  },
  formatPrice: function (value) {
    return parseFloat(value / 100).toFixed(2)
  },
  formatPcRate:function(pccount,allcount){
    if (!pccount || !allcount){
      return '0.00%'
    }else{
      return parseFloat(pccount / allcount*100).toFixed(2)+'%';
    }
  }
};

module.exports = {
  toFix: filters.toFix,
  formatPrice: filters.formatPrice,
  formatPcRate: filters.formatPcRate,
};