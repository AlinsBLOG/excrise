page{
    height: 100%;
    width: 100%;
    background: #f4f4f4;
}
.container{
    background: #f4f4f4;
    height: auto;
    overflow: hidden;
    width: 100%;
}
.profile-info{
    width: 100%;
    height: 200rpx;
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: flex-start;
    padding: 0 28rpx;
    background: #FFFFFF;
    margin-bottom: 20rpx;
    background: #fff;
}

.profile-info .avatar{
    height: 100rpx;
    width: 100rpx;
    border-radius: 50%;
}

.profile-info .info{
    flex: 1;
    height: 85rpx;
    padding-left: 31.25rpx;
}

.profile-info .name{
    display: block;
    height: 45rpx;
    line-height: 45rpx;
    color: #000;
    font-size: 30rpx;
}

.profile-info .level{
    display: block;
    height: 30rpx;
    line-height: 30rpx;
    margin-top: 28rpx;
    color: #7f7f7f;
    font-size: 30rpx;
}

.user-menu{
    width: 100%;
    height: auto;
    overflow: hidden;
}

.user-menu .item{
  padding: 40rpx 25rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #DADADA;
  position: relative;
  font-size: 34rpx;
  background: #fff;
  align-items: center;
}

.user-menu .orderItem{
  padding: 40rpx 60rpx;
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
  background: #fff;
  align-items: center;
}

.user-menu .createItem{
  border-bottom: none;
  margin-bottom: 20rpx;
}

.user-menu .orderItem text{
  display: block;
  text-align: center;
}

.user-menu .orderItem view text:nth-child(2){
  color: #AAAAAA;
  padding-top: 10rpx;
}

.user-menu .orderItem text:nth-child(1),
.user-menu .item text:nth-child(1){
  font-size: 30rpx;
}

.user-menu .item text:nth-child(2){
  color: #AAAAAA;
  font-size: 26rpx;
}

.user-menu .item.right::before{
  content: '';
  display: block;
  width: 20rpx;
  height: 20rpx;
  position: absolute;
  right: 25rpx;
  top: 50%;
  background-image: url('https://ecsp-dev.obs.myhwclouds.com/res/ecsp-wxxcx-pic/ico-arrow-r16178154.png');
  background-repeat: no-repeat;
  background-size: contain;
  margin-top: -10rpx;
}

.user-menu .item.right .price{
  color: #AAAAAA;
  padding-right: 40rpx;
}


.logout{
    /* margin-top: 50rpx; */
    height: 101rpx;
    width: 100%;
    line-height: 101rpx;
    text-align: center;
    background: #fff;
    color: #333;
    font-size: 30rpx;
}
