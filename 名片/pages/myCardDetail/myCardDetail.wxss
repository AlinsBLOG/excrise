
.description{
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  padding: 140rpx 0 0;
  background: #fff;
}

.description>view{
  flex: 1;
  line-height: 2.5;
}

.description image{
  width: 30rpx;
  vertical-align: middle;
}

.description text{
  color: #62C4FF;
  font-size: 28rpx;
  margin-left: 8rpx;
  vertical-align: middle;
}

.description .cancelZan{
  color: #999999;
}

.companyDetail{
  display: flex;
  background: #fff;
  margin: 20rpx 0 0;
  padding: 40rpx;
}

.companyLogo{
  flex: 1;
  margin-right: 40rpx;
}

.companyLogo image{
  width: 140rpx;
}

.companyIntroduction{
  flex: 4;
}

.companyIntroduction .companyName{
  font-size: 38rpx;
  line-height: 1.2;
}

.companyIntroduction .companyType{
  margin: 30rpx 0;
}

.companyIntroduction .companyType text{
  display: inline-block;
  font-size: 26rpx;
  background-color: #EDF2F6;
  border-radius: 3px;
  padding: 14rpx;
  margin-right: 14rpx;
  margin-bottom: 14rpx;
  color: #5587B8;
}

.clickDetail{
  margin-top:40rpx; 
  padding-left: 70rpx;
  font-size: 28rpx;
  color: #5587B8;
}

.companyWZIntroduction{
  padding: 0 40rpx 30rpx;
  color: #696969;
  font-size: 28rpx;
  background: #fff;
  line-height: 1.5;
}

.addMoreInfo{
  background-color: #fff;
  padding: 40rpx;
  font-size: 32rpx;
  margin:20rpx 0 150rpx;
  display: flex;
  align-items: center;
}

.addMoreInfo01{
  width: 120rpx;
}

.addMoreInfo02{
  width: 630rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  font-size: 34rpx;
}

.myCardDetailFooter{
  position: fixed;
  bottom: 0;
  width: 100%;
  z-index: 100;
  background-color: #fff;
  padding: 10rpx 20rpx;
  display: flex;
  align-items: center;
}

.myCardDetailFooter .toIndex{
  font-size: 30rpx;
  color: #7E7E7E;
  display: inline-block;
  width: 250rpx;
  text-align: center;
  flex: 1;
}

.myCardDetailFooter .toSend{
  background-color: #2188F6;
  color: #fff;
  border-radius: 3px;
  flex: 2;
}