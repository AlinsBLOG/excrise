}

.wuliu_title {
  width: 100%;
  height: 51px;
  background: #fff;
  margin-bottom: 20rpx;
}

.wl_copy {
  top: 44rpx;
  right: 28rpx;
  width: 108rpx;
  height: 38rpx;
  line-height: 38rpx;
  border: 2rpx solid #c8c8c8;
  border-radius: 1px;
  text-align: center;
}

.wlgs_cont_box {
  width: 100%;
}

.wuliu_icon {
  width: 38rpx;
  height: 32rpx;
  background: red;
  margin: 0 38rpx 0 30rpx;
}

.wl_name {
  color: #999;
  margin-right:16rpx;
}

.wlgs {
  height: 64rpx;
