.wl_msg {
  margin: 20rpx  10rpx 0 40rpx;
  padding-left: 58rpx;
  height: 100%;
  width: 100%;
  border-left: 2rpx solid #ccc;
}

.wl_addr {
  padding: 18rpx 16rpx 0 0;
  box-sizing: border-box;
}

.wl_time {
  margin-top: 5rpx;
}

.wulu_item {
  border-bottom: 2rpx solid #eee;
  padding: 20rpx 0 18rpx 0;
  box-sizing: border-box;
}

.wl_msg .first_item {
  padding-top: 0;
}

.wulu_icon {
  width: 14rpx;
  height: 14rpx;
  border-radius: 50%;
  background-color: #ccc;
  top: 20rpx;
  left: -58rpx;
  transform:translate(-50% ,50%);

}

.active_icon {
  width: 20rpx;
  height: 20rpx;
  background-color: #25ae5f;
  box-shadow: 0 0 10px #005822;
}
.first_active_icon{
  top:-10rpx;
}

.active {
  color: #25ae5f;
}

.concatNum {
  color: #4aa0f8;
  /* display: inline; */
  display: inline-block;
}

.wl_left view {
  /* display: inline-block; */
  height: 162rpx;
  width: 0;
  border-right: 2rpx solid #ccc;
}
.deliverIcon{
  transform: rotateY(180deg);
  margin-left: 30rpx;
  margin-right: 38rpx;
  font-size: 40rpx;
  color:#666;
  
}
.item_addr{
    word-break:break-all;
}