<view>
  <view class='box'>
    <view class='createRows'>
      <view class='row'>
        <!-- <text>手机号码</text> -->
        <input 
          name='mobile'
          data-name='mobile'
          bindinput='inputChange'
          placeholder='手机号码' 
          placeholder-class="phcolor"></input>
      </view>
    </view>
    <view class='createRows'>
      <view class='row'>
        <!-- <text>手机号码</text> -->
        <input 
          name='password'
          data-name='password'
          bindinput='inputChange'
          placeholder='密   码' 
          placeholder-class="phcolor"></input>
      </view>
    </view>
    <view class='createRows'>
      <view class='row validCode'>
        <!-- <text>验证码</text> -->
        <input 
          name='code'
          data-name='code'
          bindinput='inputChange'
          placeholder='验证码' 
          placeholder-class="phcolor"></input>
        <button wx:if='{{!selected}}' bindtap='tapGetCode'>获取验证</button>
        <button wx:else>{{second}}s</button>
      </view>
    </view>
  </view>
  <view class='createCertain'>
    <button bindtap='loginCertain'>完成注册</button>
    <!-- <text bindtap='loginTypeAction'>账号密码登录</text> -->
  </view>
</view>