/* pages/index/class/class.wxss */
page{background-color: #eee;height: 100%;}
.top{
	width: 100%;
	height: 88rpx;
	line-height: 88rpx;
	border-bottom: 1px solid #eee;
}
.topbtn{
	width: 88rpx;
	height: 88rpx;
	padding: 19rpx;
	position: absolute;
	top: 0;
}
.l0{left: 0;}
.r0{right: 0;}
.top_text{
	width: 105px;
	padding: 0 5px;
	height: 88rpx;
	line-height: 88rpx;
	margin: 0 auto;
}
.class_text{
	width: 40px;
	height: 88rpx;
	text-align: center;
}
.top_bottomline{
	position: absolute;
	bottom: 0;
	left: 0;
	width: 50px;
	height: 2px;
	background-color: #fd5f2a;
	transition: all 0.3s linear;
}
.line_right{
	left: calc(100% - 50px);
}



.one{
    top: 0;
    left: 0;
}
.two{
    top: 0;
    right: 0;
}
.container{
	width: 750rpx;
	height: 100%;
	/*border: 1px solid #000;*/
}
/*recommend*/
.rec_title{
	width: 100%;
	height: 110rpx;
	line-height: 110rpx;
}
.rec_title image{
	width: 9px;
	height: 15px;
	top: 50%;
	margin-top: -7px;
	left: 50%;
	margin-left: 35px;
}
.rec_goodsbox{
	width: 100%;
	height: 320rpx;
    border-bottom: 1px solid #eee;
    z-index: 5;
}
.rec_image{
	width: 260rpx;
	height: 260rpx;
    margin-right: 40rpx;
}
.rec_goodsinfo{
	width: 420rpx;
	height: 260rpx;
}
.rec_goodsname{
	height: 72rpx;
	line-height: 36rpx;
}
.rec_company{
	height: 32rpx;
	line-height: 32rpx;
}
.rec_goodsprice{
	height: 50rpx;
	line-height: 50rpx;
	margin-top: 25rpx;
}
.rec_del {
    background-color: #e64340;
    width: 132rpx;
    height: 100%;
    line-height: 320rpx;
    text-align: center;
    z-index: 4;
    top: 0;
    right: 0;
    color: #fff
}
.recGoods{
    z-index: 5;
    width: 100%;
    height: 100%;
    left: 0;
    padding: 20rpx 0;
    transition:left 0.2s ease-in-out;
}
.banner{
	width: 100%;
    height: 100%;
    transition: all 0.3s linear;
}
/* 热销 */
.hotsale_title {
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    color:#333333;
    background: #ffffff;
    padding-left: 40rpx;
}
.hotsale_title .border{
    top: 50%;
    left: 20rpx;
    transform: translateY(-50%);
}
.supply_goods {
    width: 100%;
    height: 325rpx;
    white-space: nowrap;
  }
  .supply_goodsbox {
    width: 180rpx;
    height: 325rpx;
    display: inline-block;
    margin-right: 30rpx;
  }
  .supply_goodsimage {
    width: 180rpx;
    height: 180rpx;
  }
  .supply_goodsname {
    height: 60rpx;
    white-space: pre-wrap;
  }
  /* 商家信息 */
.supply_company {
    width: 100%;
    height: 160rpx;
    padding: 30rpx 0 0 140rpx;
    padding-right: 25%;
    border-bottom: 1px solid #eee;
}
.company_logo {
    width: 80rpx;
    height: 80rpx;
    top: 50%;
    left: 32rpx;
    transform: translateY(-50%);
}
.supply_title {
    font-weight: 500;
}
.collect {
    padding: 10rpx;
    color: #333333;
    top: 60rpx;
    right: 40rpx;
    background-color: #eeeeee;
    border:1px solid #b4b4b4;
}
/* 结果为空 */
.null_image{
    width: 530rpx;
