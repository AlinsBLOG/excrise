.modal {
  background: #000;
  opacity: .6;
  position: fixed;
  left: 0;
  top: 0;
  bottom: 0;
  right: 0;
  z-index: 99
}

.content {
  position: fixed;
  top: 50%;
  left: 50%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  z-index: 100;
  background: #fff;
  border-radius: 10rpx;
  width: 80%;
  transform: translate(-50%,-50%);
  padding: 50rpx 0 50rpx;
}

.content text {
  display: block;
}

.message {
  color: #F05B29;
  font-size: 50rpx;
}

.late {
  color: #B4B4B4;
  font-size: 28rpx;
}

.number {
  color: #F05B29;
  margin: 90rpx 0;
  font-size: 80rpx;
  font-weight: 600;
}

.know {
  color: #fff;
  background: #F05B29;
  width: 87%;
  text-align: center;
  border-radius: 4rpx;
  line-height: 80rpx;
  font-size: 30rpx;
}