<wxs src = "../../../utils/wxs.wxs" module = "wxs" />
<v-model show='{{show}}' bind:click='clickModal'></v-model>
<view class='makeInquriy'>
  <form bindsubmit="comfirmAdd">
    <!-- 适用机型 -->
    <view class='type mb20'>
      <text class='dec fw'>适用机型:</text>
      <input 
        class='inp f14' 
        name="phone" 
        placeholder='填写机型如:PC200-8' 
        bindtap="searchType" 
        disabled='true' 
        value='{{wxs.lastString(adapter)}}'
      ></input>
    </view>
    <!-- 配件列表 -->
    <view class='accessoriesList mb20' wx:for="{{parts}}" wx:key="{{index}}">
      <!-- 头部 -->
      <view class='top'>
        <view 
          bindtap='editPartName' 
          style='min-width:75%' 
          class='df' 
          data-item="{{item}}" 
          data-index="{{index}}"
        >
          <view class='number'>{{index+1}}</view>
          <view class='name'>{{item.name}}</view>
        </view>
        <view class='df'>
          <input 
            value='{{item.num}}' 
            class='accessoriesInp' 
            bindblur='editN' 
            type='number' 
            data-index="{{index}}"
            data-name='num'
          ></input>
          <text 
            class='iconfont icon-delete accessoriesInp' 
            bindtap="delItem" 
            data-index="{{index}}"
          ></text>
        </view>
      </view>
      <!-- 备注 -->
      <view>
        <textarea 
          class='remarks' 
          placeholder="可以备注其他要求如零件号、发动机型号、配件尺寸等" 
          value='{{item.remark}}' 
          bindblur="editN" 
          data-index="{{index}}"
          data-name='remark'
        ></textarea>
      </view>
    </view>
    <!-- 配件列表结束 -->
    <!-- 添加配件 -->
    <view class='addPj' bindtap="goName">
      <view class='addIcon'>+</view>
      <view class='addPart'>添加配件</view>
    </view>
    <!-- 品质范围 -->
    <view class='qualityRange'>
      <text class='fow f16'>品质范围？</text>
      <text class="color fow f16">（必选，可多选）</text>
    </view>
    <!-- 选项 -->
    <scroll-view scroll-x="{{scrollX}}" class='checkboxView mb20'>
      <checkbox-group 
        class="group fow" 
        bindchange="checkboxChange">
        <label 
          class="checkbox" 
          wx:for="{{qualityList}}" wx:key="{{index}}">
          <checkbox
            checked='{{true}}'
            class='fow f14' 
            value="{{item.name}}"/>{{item.name}}
        </label>
      </checkbox-group>
    </scroll-view>
    <!-- 添加照片 -->
    <view class="photo_box mb20 clearfloat">
      <view class="camera pr" wx:for="{{photoList}}" wx:key="{{index}}" style="border: 1px solid #ddd;">
        <view class="camera oh">
          <image mode="aspectFill" class="photo_img" src="{{item}}"></image>
        </view>
        <view class="del pa" catchtap="del" data-index="{{index}}">
          <image class="del_img pa" src="/images/icons/me/evaluate/del.png"></image>
        </view>
      </view>
      <view class="camera pr" catchtap="add" hidden="{{photoList.length==9}}">
        <image class="camera_img pa" src="/images/icons/me/evaluate/camera.png"></image>
        <text class="f14 pa tc">添加照片</text>
      </view>
    </view>
    <!-- 发布询价 -->
    <view class='savaBox'>
      <button class='sava' bindtap="submitInfo">发布询价</button>
    </view>
  </form>

</view>