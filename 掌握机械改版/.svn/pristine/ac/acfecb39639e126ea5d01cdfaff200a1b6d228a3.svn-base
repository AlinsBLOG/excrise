/* pages/index/class/class.wxss */
page{height: 100%;}
.container{
	width: 750rpx;
	height: 100%;
	/*border: 1px solid #000;*/
}
.keyword{
	width: 140rpx;
    padding: 6rpx 12rpx;
    border: 1px solid #eee;
    border-radius:2px;
    height:30rpx;
    line-height: 30rpx;
    text-align: center;
    margin:  0 10rpx 10rpx 10rpx;
}
/*model*/
.model_scroll{
	width: 100%;
	height: 100%;
}
.model_title{
	background-color: #f3f3f3;
	height: 45rpx;
	line-height: 45rpx;
	padding-left: 30rpx;
	font-size: 12px;
}
.hot_item{
	width: 150rpx;
	height: 200rpx;
	box-sizing: border-box;
	border-bottom: 1px solid #f3f3f3;
}
.hot_border1{
	border-left: 1px solid #f3f3f3;
}
.hot_img{
	width: 90rpx;
	height: 90rpx;
	margin: 45rpx auto 20rpx;
}

.model_item{
	width: 100%;
	height: 80rpx;
	line-height: 80rpx;
	padding-left: 30rpx;
	border-bottom: 1px solid #f3f3f3;
}
.model_img{
	width: 60rpx;
	height: 60rpx;
	margin: 10rpx 0 10rpx 30rpx;
}
.model_text{
	margin-left: 30rpx;
	width: calc(100% - 120rpx);
}


/* 二级页面 */
.second_title{
	width: 100%;
	height: 120rpx;
	line-height: 120rpx;
}
.model_second{
	width: 750rpx;
	height: 100%;
	top: 0;
	right: 0;
	box-shadow: -10px 0 20px #ccc;
	/* display: none; */
}
.second_img{
	width: 90rpx;
	height: 90rpx;
	top: 50%;
	transform: translateY(-50%);
	left: 0;
}
.second_text{
	top: 50%;
	left: 30%;
	transform: translate(-50%,-50%);
}
.mask{
	background-color: 	transparent;
	width: 750rpx;
	height: 100%;
	top: 0;
	left: 0;
	
}
/* 子列表 */
.ulLis{
    width:100%;
	height:92rpx;
    line-height: 92rpx;
    padding-left: 30rpx;
    z-index: 99;
    border-bottom: 1px solid #eee;
}
.secondClass{
    width:70%;
    height: 100%;
    top: 0;
	right: 0;
	background-color: #fff;
	box-shadow: -10px 0 20px #ccc;
}
/* 侧边栏 */
.sidebar{
	width: 36rpx;
	height: 100%;
	top: 50%;
	right: 0rpx;
	transform: translateY(-50%);
}
.sidebar_nav{
	width: 36rpx;
	top: 50%;
	right: 0rpx;
	transform: translateY(-50%);
}