<!--pages/index/special/special.wxml-->
<view class="special_box mb20 bgf" wx:for="{{specialList}}" wx:key="{{index}}" catchtap="goTo" id="{{item.jump}}" data-text="{{item.goto}}">
	<view class="special_image">
		<image src="{{item.img}}"></image>
	</view>
	<view class="p30">
		<view class="f14 fow">{{item.title}}</view>
		<view class="f12 gray mt10">{{item.subtitle}}</view>
	</view>
</view>
<view class="page-loading" wx:if="{{showMore==0}}">
    点击或上拉加载更多
</view>
<view class="page-loading" wx:if="{{showMore==1}}">
    <image src="/images/loading.gif"></image>
    玩命加载中...
</view>
<view class="page-loading" wx:if="{{showMore==2}}">
    已经到底啦
</view>