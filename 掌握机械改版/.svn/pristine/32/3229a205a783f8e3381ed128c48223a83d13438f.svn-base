<view class='search'>
  <slot name="before"></slot>
  <view class='search-input-view'>
    <image 
      class="search_img" 
      src="/images/icons/index/search.png"></image>
    <view class='search-input-view'>
      <input 
        placeholder="请输入商品关键词"
        bindconfirm='bindconfirm'
        bindinput='bindinput'
        placeholder-class='placeholder-class'
        value='{{value}}'
        class='search-input' />
    </view>
    <image
      wx:if='{{value.length}}'
      catchtap="emptyStr" 
      class="empty" 
      src="/images/icons/search/empty.png"></image>
  </view>
  <slot name="after"></slot>
</view>