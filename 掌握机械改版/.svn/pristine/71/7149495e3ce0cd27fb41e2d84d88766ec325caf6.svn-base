page{
  /* background: #F3F3F3; */
}
.box {
  width: 95%;
  margin: 0 auto;
}

.phcolor{
  color: #B9B9B9;
}

.createRows{
  padding: 0 40rpx;
  background: #fff;
}

.createRows .row{
  display: flex;
  align-items: center;
  padding: 30rpx 0;
}

.createRows .row{
  border-bottom: 1px solid #EAEAEA;
}

.createRows text{
  color: #000;
  font-size: 34rpx;
  /* margin-right: 140rpx; */
  flex: 10;
  position: relative;
}

.createRows input{
  font-size: 32rpx;
  position: relative;
  flex: 22;
}

.createCertain{
  padding: 80rpx 100rpx 60rpx;
}

.createCertain button{
  background: #fc2d3a;
  border-radius: 50rpx;
  color: #fff;
}

.createCertain text{
  display: block;
  color: #29ADFF;
  font-size: 34rpx;
  margin-top: 40rpx;
}

.validCode{
  position: relative;
}

.validCode button{
  position: absolute;
  right: 0;
  top: 24rpx;
  border: 1px solid #fc2d3a;
  color: #fc2d3a;
  background-color: #fff;
  padding: 16rpx 38rpx; 
  border-radius: 4px;
  font-size: 30rpx;
  line-height: 1;
  z-index: 10;
}