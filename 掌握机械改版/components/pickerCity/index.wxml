<view 
    class="cityPickerBG"
    animation="{{animationData}}"
    catchtouchmove="catchTouch"
  >
    <view class="citypicker">
        <view class="cityheader">
            <view 
              bindtap="hide" 
              class="city-cancel" 
              data-click="cancel">取消</view>
            <view
              bindtap='open'
              class="city-true" 
              data-click="certion">确定</view>
        </view>
        <picker-view 
          bindchange="cityPickerChange" 
          class="citybody" 
          indicatorStyle="height: 80rpx;text-aline:center"                             style="width: 100%; height: 500rpx;" 
          value="{{value}}"
        >
            <picker-view-column>
                <view
                  style="height: 80rpx;" 
                  wx:for="{{cityData}}" 
                  wx:key="index">{{item.label}}
                </view>
            </picker-view-column>
            <picker-view-column>
                <view 
                  wx:for="{{cityData[value[0]].children}}"                    
                  wx:key="item">{{item.label && item.label}}
                </view>
            </picker-view-column>
            <picker-view-column>
                <view 
                  wx:for="{{cityData[value[0]].children[ value[1] ].children}}" 
                  wx:key="item">{{item.label && item.label}}
                </view>
            </picker-view-column>
        </picker-view>
    </view>
</view>