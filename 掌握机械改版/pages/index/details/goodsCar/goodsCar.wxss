/* pages/index/goodsCar/goodsCar.wxss */
page{background-color: #eee;height: 100%;}
checkbox .wx-checkbox-input{
    border-radius: 50%;
    width: 36rpx;
    height: 36rpx;
    margin-top: -4rpx;
 }
checkbox .wx-checkbox-input.wx-checkbox-input-checked{
    border: none;
    background: #fd5f2a;
}
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before{
    border-radius: 50%;
    width: 36rpx;
    height: 36rpx;
    line-height: 36rpx;
    text-align: center;
    font-size:20rpx;
    color:#fff;
    background: transparent;
    transform:translate(-50%, -50%) scale(1);
    -webkit-transform:translate(-50%, -50%) scale(1);
}
.banner{
	width: 100%;
	height: 100%;
}

/* 购物车 */
.car_all{
    width: 100%;
}
.car_com{
    width: 100%;
    height: 80rpx;
    border-top: 1px solid #eee;
    border-bottom: 1px solid #eee;
}
.car_com_title{
    height: 80rpx;
    line-height: 80rpx;
    left: 146rpx;
}
.car_select{
    top: 50%;
    left: 26rpx;
    transform: translateY(-50%);
}
.car_com_img{
    width: 36rpx;
    height: 36rpx;
    top: 50%;
    left: 88rpx;
    transform: translateY(-50%);
    border-radius: 50%;
}
.car_right{
    width: 14rpx;
    height: 22rpx;
    padding-left: 20rpx;
}
.car_goods{
    width: 100%;
    height: 200rpx;
    border-bottom: 1px solid #eee;
    box-sizing: border-box;
}
.recGoods{
    z-index: 2;
    width: 100%;
    height: 100%;
    padding: 20rpx 30rpx 0 276rpx;
    left: 0;
    transition:left 0.2s ease-in-out;
}
.car_goods_img{
    width: 166rpx;
    height: 166rpx;
    top: 50%;
    left: 88rpx;
    transform: translateY(-50%);
}
.car_goods_title{
    height: 68rpx;
    line-height: 34rpx;
}
.car_goods_text{
    padding-top: 12rpx;
}
.car_goods_price{
    padding-top: 26rpx;
}
.car_goods_count{
    width: 146rpx;
    height: 46rpx;
    right: 26rpx;
    bottom: 16rpx;
}
.count_num{
    width: 54rpx;
    height: 46rpx;
    line-height: 46rpx;
    left: 50%;
    transform: translateX(-50%);
}
.count_down,
.count_up{
    width: 44rpx;
    height: 44rpx;
    line-height: 44rpx;
    border: 1px solid #eee;
    border-radius: 50%;
}
.rec_del {
    background-color: #e64340;
    width: 132rpx;
    height: 100%;
    line-height: 200rpx;
    text-align: center;
    z-index: 1;
    top: 0;
    right: 0;
    color: #fff
}
.car_buy{
    width: 100%;
    height: 88rpx;
    border-top: 1px solid #eee;
    border-bottom: 1px solid #eee;
    left: 0;
    bottom: 0;
    z-index: 10;
}
.car_select_all{
    height: 88rpx;
    line-height: 88rpx;
    bottom: 0;
    left: 88rpx;
}
.car_buy_money{
    height: 88rpx;
    line-height: 88rpx;
    bottom: 0;
    right: 224rpx;
}
.car_buy_right{
    width: 204rpx;
    height: 88rpx;
    line-height: 88rpx;
    color: white;
    bottom: 0;
    right: 0;
    background: linear-gradient(to left , #ff4f15 , #ffa91f);
}
