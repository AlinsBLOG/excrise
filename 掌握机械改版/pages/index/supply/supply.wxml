<!--pages/index/supply/supply.wxml-->
<view class="supply_box mb20 bgf" wx:for="{{supplyList}}" wx:key="{{index}}">
	<view class="supply_banner" catchtap="goCompany" id="{{item.id}}" data-text="{{item.title}}">
		<image src="{{item.img_bg}}"></image>
	</view>
	<view class="supply_company bb pr">
		<view class="pa triangle"></view>
		<view class="supply_title f14  fow black">{{item.title}}</view>
		<view class="f12 textoh black">{{item.c_content}}</view>
	</view>
	<scroll-view class="supply_goods" scroll-x>
		<view class="pl25 df">
			<view class="supply_goodsbox" wx:for="{{item.goods}}" wx:key="{{index}}" data-text="{{item}}" catchtap="goDetails">
				<view class="supply_goodsimage">
					<image src="{{item.img_show}}"></image>
				</view>
				<view class="supply_goodsname textoh2 f12 mt10 fow">{{item.title}}</view>
				<view class="tc f12 orange mt10 fow">￥{{item.nowprice}}</view>
				<view class="tc f12 gray oldPrice" wx:if="{{item.retail_price && item.retail_price != item.nowprice}}">￥{{item.retail_price}}</view>
			</view>
		</view>
	</scroll-view>
</view>
<view class="page-loading" wx:if="{{showMore==0}}">
    点击或上拉加载更多
</view>
<view class="page-loading" wx:if="{{showMore==1}}">
    <image src="/images/loading.gif"></image>
    玩命加载中...
</view>
<view class="page-loading" wx:if="{{showMore==2}}">
    已经到底啦
</view>