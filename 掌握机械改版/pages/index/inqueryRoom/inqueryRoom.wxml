<wxs src = "../../../utils/wxs.wxs" module = "wxs" />
<scroll-view 
  scroll-x="true" 
  class="tab-h" 
  scroll-left="{{scrollLeft}}" 
  scroll-with-animation="{{true}}">
  <view 
    class="tab-item {{currentTab==index?'active':''}}" 
    data-current="{{index}}" 
    bindtap="swichNav" 
    wx:for="{{navTab}}" 
    wx:key="{{index}}" 
    data-state='{{item.state}}'
  >{{item.name}}</view>
</scroll-view>
<scroll-view 
  scroll-y
  bindscrolltolower="getInqueryList">
    <view 
      wx:for="{{inqueryList}}" 
      wx:key="{{index}}" 
      bindtap='goInqueryDetail' 
      data-id="{{item.id}}">
        <view class='inqueryItem' >
            <view class='inquery_num'>询价单号：{{item.reqNo}}</view>
            <!-- 询价单状态值 -->
            <view class='inquery_status {{wxs.filName(item.state)}}'>
              {{item.state>=2?stateList[2]:stateList[item.state]}}
            </view>
            <!-- 询价单状态值结束 -->
        </view>
        <view class='inquery_root frc mb20'>
            <image src='{{item.prodModelImage}}' class='inquery_img'></image>
            <view>
                <view class='title'>{{item.title}}</view>
                <view class='info' style='padding:16rpx 0'>机型：{{item.prodModelName}}</view>
                <view class='info'>询价时间：{{item.createTime}}</view>
            </view>
        </view>
    </view>
    <view 
      class="page-loading" 
      wx:if="{{!loadmore}}">加载完毕</view>

    <!-- 询价按钮
    <image 
      src='/images/inquiry/inquiry@2x.png' 
      class='centerBox' 
      bindtap='goInquery' 
      style='bottom:{{bottom}}rpx'
    ></image> -->
</scroll-view>