page{
  background: #f5f5f5;
  height:100%;
  padding-bottom:120rpx;
}
.inputItem{
    display: flex;
    align-items: center;
    /* justify-content: space-between; */
    border-bottom: 2rpx solid #e6e6e6;
}
.inputItem title{
    flex:none;
}
.inputItem input{
    flex:1;
    font-size:13px;
}
.inp_title{
    font-size:14px;
    color:#333;
    font-weight: 600;
    width:160rpx;
}
.formBox{
  font-size:28rpx;
  color:#333333;
  letter-spacing:-0.11px;
  padding-left:24rpx;
  background: #fff;
}
.formBox input{
  height:90rpx;
  line-height: 90rpx;
  /* padding-left:52rpx; */
  /* border-bottom: 2rpx solid #e6e6e6; */
}
/* 保存 */
.savaBox{
  background: #fff;
  width: 100%;
  height:140rpx;
  display:flex;
  align-items:center;
  margin-top:40rpx;
  position:fixed;
  bottom:0;

}
.sava{
  background:#f05b29;
  border-radius:2px;
  width:694rpx;
  height:70rpx;
  line-height: 70rpx;
  font-size:15px;
  color:#ffffff;
  letter-spacing:0.14px; 
} 

/*获取当前位置  */
.location{
  /* height: 100%; */
  right:24rpx;
  top:50%;
  transform: translateY(-50%);
  font-size:26rpx;
  color:#f05b29;
  letter-spacing:-0.1px;
  z-index: 100;
}
.mapIcon{
  width:20rpx;
  height:26rpx;
  margin-right:6rpx;
}
/* 图片上传组 */
.uploadGroup{
    background:#fff;
    padding: 20rpx ;
}
.camera{
    width:26px;
    height:26px;
    margin-bottom:14rpx;
}
.uploadImg{
    width:160rpx;
    height:160rpx;
    background:#F5F5F5;
    border:1px dashed #C8C8C8;
    font-size:14px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    /* text-align:center; */
}
/* 说明 */
.explain{
    color:#333;
    padding:20rpx 30rpx;
    margin-bottom:70px;
}
.del_img {
    width: 40rpx;
    height: 40rpx;
    top:-16rpx;
    left:-16rpx;
}

.uploadGroup .frc:not(:last-child) {
  margin-bottom: 20rpx;
}

.submitText {
  margin: 0 0 20rpx;
  font-size: 36rpx;
}

.tipsText {
  font-size: 28rpx;
}

