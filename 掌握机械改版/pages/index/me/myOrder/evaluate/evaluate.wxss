page {
    /* height: 100%; */
    background: #f4f4f4;
    overflow-y: auto !important;
}

.banner {
    width: 100%;
    height: 100%;
}

/* 商品评分 */

.goods_stars {
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
}

.goods_img {
    width: 132rpx;
    height: 100rpx;
}

.goods_img image {
    width: 72rpx;
    height: 72rpx;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
}

.stars_text {
    top: 50%;
    right: 30rpx;
    transform: translateY(-50%);
}

/* 选择标签 */

.choose_label {
    width: 100%;
    padding: 20rpx 0 20rpx 28rpx;
    box-sizing: border-box;
}

.keyword {
    padding: 0rpx 10rpx;
    border: 1px solid #ddd;
    border-radius: 5px;
    max-width: 214rpx;
    height: 48rpx;
    line-height: 48rpx;
    text-align: center;
    margin: 0 20rpx 20rpx 0;
}

.active {
    border: 1px solid #fd5f2a;
    color: #fd5f2a;
    background-color: #fff1ed;
}

/* 文字区域 */

textarea {
    padding: 0rpx 30rpx;
    width: 100%;
    height: 200rpx;
}

/* 添加照片 */

.photo_box {
    padding: 30rpx;
}

.camera {
    width: 150rpx;
    height: 150rpx;
    border: 1px dashed #ddd;
    background-color: #f5f5f5;
    margin: 0 20rpx 20rpx 0;
    float: left;
}

/*清除浮动代码*/

.clearfloat:after {
    display: block;
    clear: both;
    content: "";
    visibility: hidden;
    height: 0
}

.clearfloat {
    zoom: 1
}

.camera text {
    color: #666;
    width: 100%;
    top: 70%;
    left: 50%;
    transform: translate(-50%, -50%);
}

.camera_img {
    width: 56rpx;
    height: 50rpx;
    top: 40%;
    left: 50%;
    transform: translate(-50%, -50%);
}

.photo_img {
    width: 100%;
}

.del {
    width: 32rpx;
    height: 32rpx;
    top: 0;
    left: 0;
    transform: translate(-40%, -40%);
    background: #333333;
    border-radius: 50%;
}

.del_img {
    width: 16rpx;
    height: 16rpx;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
}

/* 店铺评分 */

.com_stars {
    width: 100%;
    height: 250rpx;
}

.com_stars_title {
    height: 70rpx;
    line-height: 70rpx;
}

.com_stars_fwtd,
.com_stars_wlfw {
    height: 90rpx;
    line-height: 90rpx;
    padding: 0 30rpx;
}

.com_img {
    width: 40rpx;
    height: 38rpx;
    top: 50%;
    transform: translateY(-50%);
    padding: 0 30rpx;
}

.stars_box {
    height: 90rpx;
}

.stars_img {
    width: 36rpx;
    height: 38rpx;
    top: 50%;
    transform: translateY(-50%);
    padding: 0 20rpx;
}

/* 发表评价 */

.evaluate {
    width: 100%;
    height: 100rpx;
    border-top: 1px solid #eee;
    z-index: 5;
}

.nameless {
    bottom: 0;
    left: 96rpx;
    height: 98rpx;
    line-height: 98rpx;
}

.checkbox {
    width: 96rpx;
    height: 98rpx;
}

.checkbox_box {
    width: 36rpx;
    height: 36rpx;
    border-radius: 50%;
    background: #b4b4b4;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
}

.name_act {
    background: #f05b29;
}

.checkbox image {
    width: 22rpx;
    height: 20rpx;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 6;
}

.eva_submit {
    bottom: 0;
    right: 0;
    width: 220rpx;
    height: 98rpx;
    line-height: 98rpx;
    background: #fd5f2a;
}