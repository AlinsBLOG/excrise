/* pages/index/me/addrManage/addrManage.wxss */
/*地址详情  */
page{
  width:100%;
  height:100%;
  background:#f5f5f5;
  margin-top: 2rpx;
  padding-bottom: 120rpx;
  box-sizing: border-box;

}
.addrDetail{
  width:750rpx;
  height:206rpx;
  background: #fff;
  margin-bottom:20rpx;
}
.addrDetail .detail{
  display: flex;
  justify-content: center;
  align-items: flex-start;
  flex-direction: column;
  height:130rpx;
  padding-left:28rpx;
  border-bottom:2rpx solid #e6e6e6;
  box-sizing: border-box;
  font-size:13px;
  color:#333333;
  line-height: 26rpx;

}
.addrDetail .detail .name{
  margin-right:30rpx;
}
.addrDetail .detail .addrMsg{
 padding-top:18rpx;
}
.addrDetail .addrEdit{
    justify-content: space-between; 
    padding:0 20rpx 0 28rpx; 
    height:76rpx;
    font-size:22rpx;
    color:#333333;
}
/*编辑  */
.addrEdit .edit{
  margin-right:46rpx;
}
 .addrEdit .editIcon{
  width: 30rpx;
  height:32rpx;
  margin-right:8rpx;
  color:#b4b4b4;
} 
/* 新建地址按钮 */
 .newAddr{
  background:#f05b29;
  border-radius:4px;
  width:692rpx;
  height:80rpx;
  position: absolute;
  transform: translateX(-50%);
  left:50%;  
  bottom:20rpx; 
  font-size:15px;
  color:#ffffff;
  text-align: center;
  line-height: 80rpx;
  /* z-index:10000; */
} 
 .btn_mask{
   background:#fff; 
  width:100%;
  height:120rpx;
  position: fixed;
  bottom:0;
  left:0;
  z-index: 9999;
} 
/*收货地址为空页面  */

/* 收获地址在哪里的盒子 */
.whereAddr{
  position: absolute;
  top:282rpx;
  left:50%;
  transform: translateX(-50%);
  font-size:14px;
  color:#999999;
}
/* 没有收货地址的图片提示 */
.whereAddr image{
  width:135px;
  height:126px;
  margin-bottom:32rpx;
}

.df_active{
  color:#f05b29;
}



