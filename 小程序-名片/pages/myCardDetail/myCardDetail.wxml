<view
  data-cardId='{{myCardList[0].cardId}}'
  data-userId='{{myCardList[0].userId}}'
  class='addMoreInfo' 
  bindtap='toCardDetail' >
  <text class='addMoreInfo01'>更多</text>
  <text class='addMoreInfo02'>添加个人介绍，让好友更了解你111000000222</text>
</view>

<view class='myCardDetailFooter'>
  <text class='toIndex' bindtap='backIndex'>回到首页</text>
  <button class='toSend' open-type='share'>发名片</button>
</view>

