<import src="../template/template.wxml"/>
<view class='edit'>
  <template is="card" data='{{myCardList,...userInfo}}'/>
</view>

<view class='description'>
  <view bindtap='aboutMe' data-type='buzz'>
    <image mode='widthFix' src='../../static/images/hot.png'></image>
    <text>人气 {{myCardList[0].popIdx}}</text>
  </view>
  <view bindtap='aboutMe' data-type='save'>
    <image mode='widthFix' src='../../static/images/save.png'></image>
    <text>保存 {{myCardList[0].saveIdx}}</text>
  </view>
  <view bindtap='aboutMe' data-type='reliable'>
    <image mode='widthFix' src='../../static/images/zan.png'></image>
    <text>靠谱 {{myCardList[0].availableIdx}}</text>
  </view>
</view>

<view class='companyDetail'>
  <view class='companyLogo'>
    <image src='../../static/images/addImage.png' mode='widthFix'></image>
  </view>
  <view class='companyIntroduction'>
    <view class='companyName'>广东云算盘网络科股份技有限公司</view>
    <view class='companyType clearfix'>
      <text>101-200人</text>
      <text>成立4年</text>
      <text>信息及软件服务</text>
      <text>财务</text>
      <text>金融</text>
      <text>财税</text>
      <text>商务服务</text>
    </view>
    <view class='clickDetail' wx:if='{{hiddenDetail}}' bindtap='hiddenDetailFun'>
      展开详情
    </view>
  </view>
</view>
 <view class='companyWZIntroduction' wx:if='{{!hiddenDetail}}'>
